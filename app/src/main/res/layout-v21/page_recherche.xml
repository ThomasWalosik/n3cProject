<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.recherche.RechercheActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/ic_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_anchorGravity="center"
            tools:ignore="MissingConstraints">

        <Button
                android:id="@+id/bouton_test_recherche"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_menu_back"
                android:gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recherche"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/text_recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="Bienvenue sur la page de recherche"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>