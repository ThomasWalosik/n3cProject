<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:id="@+id/id_rappel_page_principale"
        android:background="@drawable/rappel_shape"
        tools:ignore="MissingConstraints"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:id="@+id/textview_jour_semaine"
            android:layout_height="30dp"
            android:text="SAM."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#F41E1E"
            android:layout_width="53dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

    <TextView
            android:id="@+id/textview_numero_jour"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="52dp"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="15dp"/>

    <TextView
            android:id="@+id/textview_evenement"
            android:layout_height="30dp"
            android:text="Évenement à venir :"
            android:textSize="15sp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="146dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"/>
</RelativeLayout>